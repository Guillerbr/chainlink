{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "preserve"
  },
  "include": ["src", "@types"],
  "references": [
    {
      "path": "../../tools/json-api-client"
    }
  ]
}
